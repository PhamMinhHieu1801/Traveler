<p id="notice"><%= notice %></p>

<h1>Travels page</h1>
<%=form_tag travels_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Search" %>
<%end %>

<%= link_to "Advanced Search", new_search_path %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Writer</th>
      <th>Detail</th>
      <th>Location</th>
      <th>Estimated price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @travels.each do |travel| %>
      <tr>
        <td><%= travel.title %></td>
        <td><%= travel.writer %></td>
        <td><%= travel.detail %></td>
        <td><%= travel.location %></td>
        <td><%= travel.estimated_price %></td>
        <td><%= link_to 'Show', travel %></td>
        <td><%= link_to 'Edit', edit_travel_path(travel) %></td>
        <td><%= link_to 'Destroy', travel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Travel', new_travel_path %>
